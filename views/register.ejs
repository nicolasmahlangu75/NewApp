<h1>Register here</h1>

    <form action ="/register" method="POST">
        <div>
            <label for="name">Name</label>
            <input type="text" id="first_name" name="name" required>
        </div><br>
    
    
        <div>
            <label for="lastname">Last_name</label>
            <input type="text" id="surname" name="last_name" required>
        </div><br>
    
        <div>
            <label for="idno">ID_number</label>
            <input type="text" id="idno" name="IDnum" required>
        </div><br>

        <div>
            <label for="email">Email</label>
            <input type="email" id="email_address" name="email" required>
        </div><br>
    
        <div>
            <label for="passw">Password</label>
            <input type="password" id="pwd" name="passwrd" required>
        </div><br>
    
        <button type="submit">Register</button>
    </form>

